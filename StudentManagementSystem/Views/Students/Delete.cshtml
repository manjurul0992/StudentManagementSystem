@model StudentManagementSystem.Models.Student

@{
    ViewBag.Title = "Delete Student";
}

<div class="container mt-5">
    <h2 class="text-center alert alert-danger">@ViewBag.Title</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center">Are you sure you want to delete this student?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StudentName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StudentName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Class)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Class)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Section)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Section)
                </dd>
            </dl>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "mt-3" }))
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
